{
  "name": "wdb-discord-bot",
  "version": "1.0.0",
  "description": "A custom Discord bot for the WDB server",
  "main": "src/server.ts",
  "repository": "https://github.com/wdbears/wdb-discord-bot.git",
  "author": "Ahmad Raza <razatastic@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon --watch './**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "yarn prettier --write .",
    "build": "tsc",
    "serve": "node dist/server.js",
    "start-prod": "export NODE_ENV=production && yarn deploy && yarn serve",
    "deploy": "yarn build && node dist/deploy.js",
    "deploy-prod": "export NODE_ENV=production && yarn deploy",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "@discordjs/builders": "^0.8.2",
    "@discordjs/rest": "^0.1.0-canary.0",
    "cheerio": "^1.0.0-rc.10",
    "discord-api-types": "^0.24.0",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "node-fetch": "3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.10",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}