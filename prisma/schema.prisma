generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "dataProxy"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

enum WalletType {
  ETHEREUM
  SOLANA
  AVALANCHE
}

model User {
  id              Int           @id @default(autoincrement())
  discordId       Int           @unique
  discordUsername String
  active          Boolean
  alts            UserWallets[]
  reminders       Reminder[]
}

model Wallet {
  address String        @id
  type    WalletType
  twitter String
  discord String
  user    UserWallets[]
}

model UserWallets {
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  wallet   Wallet @relation(fields: [walletId], references: [address])
  walletId String

  @@id([userId, walletId])
}

model Collection {
  alias    String  @id
  slug     String // collection name
  contract String
  floor    Decimal
}

model Reminder {
  id          Int      @id @default(autoincrement())
  time        DateTime
  title       String
  description String
  channel     String
  mention     String // Users delimited by semicolon
  schedule    String
  creator     User     @relation(fields: [userId], references: [id])
  userId      Int
}

model Whale {
  name    String @id
  address String
  twitter String
}

model SubcommandLink {
  name String @id
  url  String
}
