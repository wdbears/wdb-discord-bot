{
  "name": "wdb-discord-bot",
  "version": "1.0.0",
  "description": "A custom Discord bot for the WDB server",
  "main": "src/server.js",
  "repository": "https://github.com/wdbears/wdb-discord-bot.git",
  "author": "Ahmad Raza <razatastic@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon --exec yarn run babel-node -- ./src/server.js",
    "babel-node": "babel-node",
    "lint": "yarn prettier --write .",
    "build": "babel src -d dist --copy-files",
    "serve": "node dist/server.js",
    "start-prod": "yarn build && yarn serve"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.3",
    "cheerio": "^1.0.0-rc.3",
    "core-js": "^3.6.5",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.7",
    "firebase-admin": "^9.3.0",
    "node-fetch": "^2.6.1",
    "regenerator-runtime": "^0.13.7",
    "ytdl-core": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
