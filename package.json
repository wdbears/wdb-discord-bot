{
  "name": "wdb-discord-bot",
  "version": "1.0.0",
  "description": "A custom Discord bot for the WDB server",
  "main": "src/server.js",
  "repository": "https://github.com/wdbears/wdb-discord-bot.git",
  "author": "Ahmad Raza <razatastic@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon --exec yarn run babel-node -- ./src/server.js",
    "babel-node": "babel-node --presets='@babel/preset-env' --ignore='foo|bar|baz'",
    "lint": "yarn prettier --write .",
    "docker-build": "docker build -t razatastic/wdb-discord-bot .",
    "docker-run": "docker run -p 3000:3000 -d razatastic/wdb-discord-bot"
  },
  "dependencies": {
    "@discordjs/opus": "^0.3.2",
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.7",
    "firebase-admin": "^9.2.0",
    "ytdl-core": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.1",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "nodemon": "^2.0.5",
    "prettier": "2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-console": 0,
      "consistent-return": "off"
    },
    "plugins": [
      "prettier"
    ]
  }
}
