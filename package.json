{
  "name": "wdb-discord-bot",
  "version": "1.0.0",
  "description": "A custom Discord bot for the WDB server",
  "main": "src/server.ts",
  "repository": "https://github.com/wdbears/wdb-discord-bot.git",
  "author": "Ahmad Raza <razatastic@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon src/server.ts",
    "build": "rimraf ./dist && tsc",
    "deploy": "npm run build && node dist/deploy.js",
    "clean": "npx rimraf node_modules dist",
    "clean-install": "npm run clean && npm install &&  npm run init-prisma",
    "lint": "eslint src/**/* && prettier --write .",
    "init-prisma": "prisma generate"
  },
  "dependencies": {
    "@discordjs/builders": "0.12.0",
    "@discordjs/rest": "0.3.0",
    "@prisma/client": "3.12.0",
    "cheerio": "1.0.0-rc.10",
    "discord-api-types": "0.31.1",
    "discord.js": "13.6.0",
    "dotenv": "16.0.0",
    "express": "4.17.3",
    "node-fetch": "3.2.3"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/node": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "eslint": "8.13.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "nodemon": "2.0.15",
    "prettier": "2.6.2",
    "prisma": "3.12.0",
    "rimraf": "^3.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}