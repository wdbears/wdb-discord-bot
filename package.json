{
  "name": "root",
  "private": true,
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  },
  "scripts": {
    "start": "yarn bootstrap && yarn build-site && yarn start-bot",
    "start-bot": "lerna run --scope wdb-discord-bot start --stream",
    "start-site": "lerna run --scope site dev --stream",
    "build-site": "lerna run --scope site build --stream",
    "bootstrap": "yarn lerna bootstrap",
    "lint": "yarn prettier --write ."
  }
}
