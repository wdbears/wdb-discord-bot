{
  "name": "wdb-discord-bot",
  "version": "1.0.0",
  "description": "A custom Discord bot for the WDB server",
  "main": "src/server.js",
  "repository": "https://github.com/wdbears/wdb-discord-bot.git",
  "author": "Ahmad Raza <razatastic@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon --watch './**/*.ts' --exec 'ts-node' src/server.ts",
    "lint": "yarn prettier --write .",
    "build": "tsc",
    "serve": "node dist/server.js",
    "start-prod": "export NODE_ENV=production && yarn build && yarn serve",
    "deploy-commands": "yarn build && node dist/deploy.js"
  },
  "dependencies": {
    "@discordjs/builders": "^0.8.2",
    "@discordjs/rest": "^0.1.0-canary.0",
    "cheerio": "^1.0.0-rc.10",
    "discord-api-types": "^0.24.0",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^10.0.0",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^16.11.8",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "nodemon": "^2.0.15",
    "prettier": "2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css,md}": "prettier --write"
  }
}
